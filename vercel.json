{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],

  "crons": [
    {
      "path": "/api/cron",
      "schedule": "35 14,19 * * *"
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/src/index.js" }]
}
